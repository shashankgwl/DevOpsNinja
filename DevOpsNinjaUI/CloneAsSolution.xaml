<Window x:Class="DevOpsNinjaUI.CloneAsSolution"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevOpsNinjaUI"
        mc:Ignorable="d"
        Title="Clone to solution" Height="200" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Parent Solution" Grid.Row="0"/>
        <TextBox IsReadOnly="True" BorderThickness="0"  Name="lblParentSolution" Grid.Row="0" Margin="120,0,74,10"/>
        <Label Content="Display Name" Grid.Row="1"/>
        <TextBox x:Name="txtDisplayName" Grid.Row="1" Margin="120,0,74,10"/>
        <Label Content="New Version" Grid.Row="2"/>
        <TextBox x:Name="txtNewVersion"  Grid.Row="1" Margin="120,46,74,0" Grid.RowSpan="2"/>
        <Button Content="OK"  Grid.Row="3" Margin="120,6,119,4" Click="Button_Click"/>
    </Grid>
</Window>
