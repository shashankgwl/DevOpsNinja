<Window x:Class="DevOpsNinjaUI.AddStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevOpsNinjaUI"
        mc:Ignorable="d"
        Title="Add Step" Height="450" Width="800">
    <Grid>
        <Label Content=" Select Step type" Width="200" Margin="10,10,590,97" />
        <ComboBox Name="drpSelectStep" Margin="140,10,476,98" IsEditable="True">
            <ComboBoxItem Content="Import Solution"/>
            <ComboBoxItem Content="Wait"/>
        </ComboBox>
        <ComboBox Name="drpSolutions" Margin="365,9,42,86" IsEditable="True" DisplayMemberPath="FriendlyName" SelectedValuePath="SolutionName" >

        </ComboBox>

        <CheckBox Name="chkUpgrade" Content="This solution is an upgrade of the previous version." Margin="140,72,343,38"/>
        <Button Content="Add step" Grid.Row="1" Click="Button_Click"/>
        <CheckBox Content="Export Managed" Name="chkExportType" IsChecked="True" HorizontalAlignment="Left" Margin="490,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.533,0.451" Height="17" Width="203"/>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
